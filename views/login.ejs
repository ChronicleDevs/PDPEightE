<!DOCTYPE html>
<html>
<%- include('layout') %>
<body class="bodyrc">
<div>
    <div class="wave"></div>
    <div class="wave"></div>
    <div class="wave"></div>
</div>
<section >
    <div class="flex flex-col items-center align-middle justify-center px-6 py-8 m-auto sm:h-screen md:h-screen lg:py-0">
        <a href="#" class="flex font-dmsans items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
            <img class="w-8 h-8 mr-2" src="/images/neofetch.png" alt="logo">
            Cethydexyl
        </a>
        <div class="w-full rounded-lg shadow-[0px_10px_1px_rgba(32,32,32,_1),_0_10px_20px_rgba(16,15,16,_1)] md:mt-0 sm:max-w-md xl:p-0 bg-gray-800/30 backdrop-blur-md dark:border-gray-700/45">

            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h1 id="typewriter" class="text-xl font-dmsans font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                    Masukan Kode Rahasia
                </h1>
                <form class="space-y-4 md:space-y-6 max-w-sm" action="/auth" method="post">
                    <div>
                        <label for="password" class="font-dmsans block mb-2 text-sm font-medium text-gray-900 dark:text-white">Kode Rahasia</label>
                        <input type="password" name="code" id="password" placeholder="••••••••" class="font-dmsans bg-gray-100/30 border border-gray-700/30 text-gray-900 rounded-lg focus:ring-gray-800 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700/30 dark:border-gray-600 dark:placeholder-gray-900/30 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 backdrop-blur-sm" required="">
                    </div>

                    <% if (errorr !== undefined || errorr !== null || errorr !== '') { %>
                        <p class="font-dmsans block text-red-500 drop-shadow-lg font-bold"><%= errorr %></p>
                    <% } %>
                    <div class="flex items-center justify-between">
                        <div class="flex items-start">
                            <div class="flex items-center h-5">
                                <input id="pwshow" onclick="toggleHideorNot()" name='pwshow' type="checkbox" style="cursor: pointer; pointer-events: auto;" class=" w-4 h-4 text-blue-600 bg-gray-100 border-gray-700 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                            </div>
                            <div class="ml-3 text-sm">
                                <label for="pwshow" class="font-dmsans text-gray-500 dark:text-gray-300">Tampilkan Kode</label>
                            </div>
                        </div>
                    </div>
                    <div class="flex items-center justify-between">
                        <div class="flex items-start">
                            <div class="flex items-center h-5">
                                <input id="remember" aria-describedby="remember" name='remember' type="checkbox" style="cursor: pointer; pointer-events: auto;" class=" w-4 h-4 text-blue-600 bg-gray-100 border-gray-700 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                            </div>
                            <div class="ml-3 text-sm">
                                <label for="remember" class="font-dmsans text-gray-500 dark:text-gray-300">Remember me</label>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="w-full text-white backdrop-blur-md bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-primary-800">Sign in</button>
                </form>
            </div>
        </div>
    </div>
</section>
<script>

    const words = ["Halo pengguna", "Masukkan kode rahasia"];
    let i = 0;
    let j = 0;
    let currentWord = "";
    let isDeleting = false;

    function type() {
        currentWord = words[i];
        if (isDeleting) {
            document.getElementById("typewriter").textContent = currentWord.substring(0, j-1);
            j--;
            if (j == 0) {
                isDeleting = false;
                i++;
                if (i == words.length) {
                    i = 0;
                }
            }
        } else {
            document.getElementById("typewriter").textContent = currentWord.substring(0, j+1);
            j++;
            if (j == currentWord.length) {
                isDeleting = true;
            }
        }
        setTimeout(type, 75);
    }

    type();

    function toggleHideorNot() {
        var x = document.getElementById("password");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>
</body>
</html>